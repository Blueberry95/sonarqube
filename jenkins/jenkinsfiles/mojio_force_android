pipeline {
    agent any
    parameters {
        string(name: 'GIT_BRANCH',  description: 'Branch which will be analyzed', defaultValue: 'master')
    }
    
    stages {
        stage('Clone repo') {
            steps { 
                cleanWs()
                git branch: "${params.GIT_BRANCH}", 
                credentialsId: "mojio_android", 
                url: 'git@github.com:mojio/force-android.git'
            }
        }
        stage('Print tasks') {
            steps {
                sh "./gradlew -Pcoverage clean init app:build tasks --all"
            }
        }
        stage('Jacoco test report') {
            steps {
                sh "./gradlew -Pcoverage app:jacocoTestForceDebugUnitTestReport"
            }
        }
        stage('SonarQube analysis') {
            steps { 
                script {
                    // requires SonarQube Scanner 2.8+
                    scannerHome = tool 'sonarqube'
                }
                withSonarQubeEnv('sonarqube') {
                    sh "${scannerHome}/bin/sonar-scanner -Dsonar.projectKey=mojio:force-android -Dsonar.projectName='Mojio Force-Android' -Dsonar.projectVersion=$BUILD_NUMBER"
                }
            }
        }
    }
}